	Sport TEXT,
	Event_var TEXT,
	Result_var TEXT,
	Medal INTEGER
); 

-- Add a copy statement to load the Winter data into the 
COPY WInter FROM 'C:\Users\AC\Desktop\DATA-DA\Winter.csv'
